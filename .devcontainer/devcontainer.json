{
	"name": "Alpine",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"postCreateCommand": "SUDO= abuild-keygen -a -i -n",
	"containerEnv": {
		"USE_CCACHE": "1",
		"CCACHE_BASEDIR": "${containerWorkspaceFolder}",
		"CCACHE_NOHASHDIR": "true",
		"CCACHE_MAXSIZE": "10G",
		"CCACHE_REMOTE_STORAGE": "${localEnv:CCACHE_REMOTE_STORAGE}"
	}
}
